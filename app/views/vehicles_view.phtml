    <?php if (isset($vehicle)): ?>
        <h1 class="font-bold mb-5 text-2xl">Vehicle Details</h1>
        <ul>
            <li>Name: <?= htmlspecialchars($vehicle['name']) ?></li>
            <li>Model: <?= htmlspecialchars($vehicle['model']) ?></li>
