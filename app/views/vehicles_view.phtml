                    $id = substr($url, $lastSlashPos + 1, -1);
                } else {
                    $id = 1;
                }
                ?>
                <li><a href="<?= BASE_URL ?>/vehicles/<?= htmlspecialchars($id) ?>"><?= htmlspecialchars($vehicles['name']) ?></a></li>
            <?php endforeach; ?>
        </ul>
